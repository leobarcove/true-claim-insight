# ============================================
# True Claim Insight - Environment Variables
# ============================================
# Copy this file to .env for local development
# cp .env.example .env

# ============ APPLICATION ============
NODE_ENV=development
LOG_LEVEL=debug

# ============ DATABASE ============
DATABASE_URL=postgresql://tci:localdev@localhost:5432/true_claim_insight

# ============ REDIS ============
REDIS_URL=redis://localhost:6379

# ============ AWS (LocalStack for dev) ============
AWS_REGION=ap-southeast-5
AWS_ENDPOINT=http://localhost:4566
AWS_ACCESS_KEY_ID=localstack
AWS_SECRET_ACCESS_KEY=localstack
S3_BUCKET_DOCUMENTS=tci-documents
S3_BUCKET_RECORDINGS=tci-recordings

# ============ JWT ============
JWT_SECRET=local-dev-secret-change-in-production
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# ============ SMTP (MailHog for dev) ============
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@trueclaiminsight.local

# ============ THIRD-PARTY APIs ============
# Obtain credentials from vendors for development/sandbox accounts

# Tencent TRTC (Video Calls)
# Register at: https://cloud.tencent.com/product/trtc
TRTC_SDK_APP_ID=
TRTC_SECRET_KEY=

# Innov8tif (eKYC)
# Contact: https://innov8tif.com
INNOV8TIF_API_KEY=
INNOV8TIF_ENCRYPTION_KEY=

# Clearspeed (Voice Risk Analysis)
# Contact: https://clearspeed.com
CLEARSPEED_API_KEY=

# Hive AI (Visual Moderation)
# Register at: https://hivemoderation.com
HIVE_API_KEY=

# SigningCloud (Digital Signatures)
# Contact: https://signingcloud.com
SIGNINGCLOUD_CLIENT_ID=
SIGNINGCLOUD_CLIENT_SECRET=

# ============ SERVICE PORTS ============
API_GATEWAY_PORT=3000
CASE_SERVICE_PORT=3001
VIDEO_SERVICE_PORT=3002
IDENTITY_SERVICE_PORT=3003
RISK_ENGINE_PORT=3004
DOCUMENT_SERVICE_PORT=3005
ADJUSTER_PORTAL_PORT=4000
CLAIMANT_WEB_PORT=4001
